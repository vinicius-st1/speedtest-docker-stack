# Arquivo gerado automaticamente. Não edite manualmente.
# Instância: {{ inst.name }} ({{ inst.fqdn }})

upstream ookla_8080 {
  server {{ inst.name }}_ookla:8080;
  keepalive 32;
}

upstream ookla_5060 {
  server {{ inst.name }}_ookla:5060;
  keepalive 32;
}

server {
  listen 80;
  server_name {{ inst.fqdn }};

  access_log /var/log/nginx/access.log;
  error_log  /var/log/nginx/error.log warn;

  location = /healthz {
    add_header Content-Type text/plain;
    return 200 "ok\n";
  }

  location ^~ /.well-known/acme-challenge/ {
    root /var/www/certbot;
    try_files $uri =404;
  }

  location / {
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_read_timeout 300s;
    proxy_send_timeout 300s;
    proxy_pass http://ookla_8080;
  }
}

# Portas padrão do Ookla
server {
  listen 8080;
  server_name {{ inst.fqdn }};

  location = /healthz { return 200 "ok\n"; }

  location ^~ /.well-known/acme-challenge/ {
    root /var/www/certbot;
    try_files $uri =404;
  }

  location / {
    proxy_set_header Host $host;
    proxy_pass http://ookla_8080;
  }
}

server {
  listen 5060;
  server_name {{ inst.fqdn }};

  location = /healthz { return 200 "ok\n"; }

  location ^~ /.well-known/acme-challenge/ {
    root /var/www/certbot;
    try_files $uri =404;
  }

  location / {
    proxy_set_header Host $host;
    proxy_pass http://ookla_5060;
  }
}

{% if global.tls_enabled %}
server {
  listen 443 ssl http2;
  server_name {{ inst.fqdn }};

  ssl_certificate     /etc/letsencrypt/live/{{ inst.fqdn }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ inst.fqdn }}/privkey.pem;

  location = /healthz { return 200 "ok\n"; }

  location ^~ /.well-known/acme-challenge/ {
    root /var/www/certbot;
    try_files $uri =404;
  }

  location / {
    proxy_set_header Host $host;
    proxy_pass http://ookla_8080;
  }
}
{% endif %}
